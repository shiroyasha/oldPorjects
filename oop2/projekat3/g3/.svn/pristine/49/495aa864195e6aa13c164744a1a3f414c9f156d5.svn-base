}

.profile {
	-moz-box-shadow: 0px 0px 15px 3px #e0e0e0;
	-webkit-box-shadow: 0px 0px 15px 3px #e0e0e0;
	box-shadow: 0px 0px 15px 3px #e0e0e0;
	
